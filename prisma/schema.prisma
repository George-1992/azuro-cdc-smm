generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  superAdmin
  member
}

// top-level tenant
model accounts {
  id         String   @id @default(uuid())
  name       String   @default("Default Account")
  status     String?  @default("active")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  users         users_and_accounts[]
  organizations organizations[]

  @@index([name])
  @@index([status])
}

model users {
  id         String   @id @default(cuid())
  status     String?  @default("active")
  email      String   @unique
  first_name String?  @default("")
  last_name  String?  @default("")
  password   String?
  provider   String?  @default("email")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  accounts users_and_accounts[]
  orgs     users_in_organizations[]

  @@index([email])
  @@index([status])
  @@index([provider])
}

model users_and_accounts {
  id         String   @id @default(cuid())
  role       Role     @default(member) // e.g. "superAdmin" |  "member"
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  account_id String
  account    accounts @relation(fields: [account_id], references: [id], onDelete: Cascade)
  user_id    String
  user       users    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([account_id, user_id])
  @@index([account_id])
  @@index([user_id])
  @@index([role])
}

model organizations {
  id          String  @id @default(cuid())
  name        String
  description String?
  timezone    String? @default("UTC")

  webhook  String? @default("")
  webhooks Json?   @default("{}")
  configs  Json?   @default("{}")

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Ownership
  account_id String
  account    accounts @relation(fields: [account_id], references: [id], onDelete: Cascade)

  // Users inside the org
  users        users_in_organizations[]
  sources      sources[]
  avatars      avatars[]
  campaigns    campaigns[]
  publications publications[]
  medias       medias[]
  ideas        ideas[]

  @@index([name])
  @@index([account_id])
}

model users_in_organizations {
  id         String   @id @default(cuid())
  role       String // e.g.  "superAdmin" |  "member"
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  org_id  String
  org     organizations @relation(fields: [org_id], references: [id], onDelete: Cascade)
  user_id String
  user    users         @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@unique([org_id, user_id])
  @@index([org_id])
  @@index([user_id])
  @@index([role])
}

model sources {
  id                 String   @id @default(cuid())
  name               String
  status             String   @default("processing")
  type               String
  url                String?
  raw_text           String?
  text_output        String?
  json_chapters      Json?    @default("[]")
  text_stamps_output String?  @default("")
  internal_note      String?  @default("")
  config             Json?    @default("{}")
  created_at         DateTime @default(now())
  updated_at         DateTime @updatedAt
  medias             Json?    @default("[]")

  org_id       String
  org          organizations  @relation(fields: [org_id], references: [id], onDelete: Cascade)
  campaigns    campaigns[]
  publications publications[]

  @@index([org_id])
  @@index([name])
  @@index([type])
  @@index([status])
}

model avatars {
  id                 String  @id @default(cuid())
  name               String
  tone               String
  notes              String?
  configs            Json?   @default("{}")
  elvenlabs_voice_id String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  org_id String
  org    organizations @relation(fields: [org_id], references: [id], onDelete: Cascade)

  campaigns    campaigns[]
  publications publications[]
  medias       medias[]

  @@index([org_id])
  @@index([name])
}

model campaigns {
  id                 String  @id @default(cuid())
  name               String
  status             String  @default("draft")
  language           String? @default("en")
  content_type       String  @default("post")
  global_inspiration String?

  scheduled_at DateTime?
  published_at DateTime?

  agenda  Json? @default("[]")
  configs Json? @default("{}")

  publications publications[]
  avatar_id    String?
  avatar       avatars?       @relation(fields: [avatar_id], references: [id], onDelete: Cascade)
  sources      sources[]

  org_id String
  org    organizations @relation(fields: [org_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([name])
  @@index([status])
}

model publications {
  id                 String  @id @default(cuid())
  name               String
  status             String  @default("planned")
  content_type       String  @default("post")
  language           String? @default("en")
  title              String? @default("")
  description        String? @default("")
  script             String? @default("")
  message            String? @default("")
  notes              String? @default("")
  global_inspiration String? @default("")
  target_platforms   Json?   @default("[]")
  isFastMode         Boolean @default(false)

  scheduled_at DateTime?
  published_at DateTime?

  campaign_id String?
  campaign    campaigns?    @relation(fields: [campaign_id], references: [id], onDelete: Cascade)
  avatar_id   String?
  avatar      avatars?      @relation(fields: [avatar_id], references: [id], onDelete: Cascade)
  sources     sources[]
  medias      medias[]
  org_id      String
  org         organizations @relation(fields: [org_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([org_id])
  @@index([name])
  @@index([status])
  @@index([scheduled_at])
}

model medias {
  id         String   @id @default(cuid())
  url        String
  key        String?  @default("")
  type       String?
  metadata   Json?    @default("{}")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  org_id       String
  org          organizations  @relation(fields: [org_id], references: [id], onDelete: Cascade)
  avatars      avatars[]
  publications publications[]

  @@unique([key])
  @@unique([url])
  @@index([org_id])
  @@index([type])
}

model ideas {
  id          String @id @default(cuid())
  text        String
  json_stamps Json?  @default("{}")

  org_id String
  org    organizations @relation(fields: [org_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
